extends ../../layout/default.pug
include ../../mixins/boxHead.pug
block main 
        .container.my-3 
                .row            
                .col-12 
                        +boxHead(title)
                .row 
                        .col-4.mb-3
                                each item in listProduct     
                                        .product-item 
                                                .inner-image 
                                                        img(src=`${item.thumbnail}`)
                                                .inner-content 
                                                        h3.inner-title 
                                                                a(href=`product/detail/${item.url}`) #{item.title}
                                                        .inner-price-new #{item.newPrice}$
                                                        .inner-price-old #{item.price}$
                                                        .inner-discount -#{item.discountPercentage}%   
                                        