extends ../../layout/default.pug

block main 
    .container.my-3 
        .row    
            .col-12 
                if(product.title)
                    h1(class="mb-4" #{product.title})
                
                if(product.price)
                    div(class="mb-4" ) Price: <b>#{product.price}</b>

                if(product.discountPercentage)
                    div(class="mb-4") DiscountPercent: <b>#{product.discountPercentage}</b>
                
                if(product.stock)
                    div(class="mb-4") Quantity: <b>#{product.stock}</b>
                
                if(product.thumbnail)
                    div(class="mb-4")
                        img(src=product.thumbnail style="width: 100px")
                
                if(product.status)
                    div(class="mb-4")
                        span Status: 
                            if(product.status == "active")
                                span(class="badge badge-success"  style="color: black") Active 
                            if(product.status == "inactive")
                                span(class="badge badge-danger" style="color: black") inactive    
                
                if(product.position)
                    div(class="mb-4") position: <b>#{product.position}</b>

                if(product.description)
                    div(class="mb-4") description: <b>#{product.description}</b>
