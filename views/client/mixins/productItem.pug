mixin productItem(item)
    .product-item 
        .inner-image 
            img(src=`${item.thumbnail}`)
        .inner-content 
            h3.inner-title 
                a(href=`/product/detail/${item.url}`) #{item.title}
            if item.feature == '1'
                .inner-feature Outstanding
            .inner-price-new #{item.newPrice}$
            .inner-price-old #{item.price}$
            .inner-discount -#{item.discountPercentage}% 