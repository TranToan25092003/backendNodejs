extends ../../layout/default.pug
include ../../mixins/alert.pug
block main 
    h1(class="mb-4" style="color: white") #{title}
    if(product.title)
        h1(class="mb-4" #{product.title})
    
    if(product.price)
        div(class="mb-4" style="color: white") Price: <b>#{product.price}</b>

    if(product.discountPercentage)
        div(class="mb-4" style="color: white") DiscountPercent: <b>#{product.discountPercentage}</b>
    
    if(product.stock)
        div(class="mb-4" style="color: white") Quantity: <b>#{product.stock}</b>
    
    if(product.thumbnail)
        div(class="mb-4")
            img(src=product.thumbnail style="width: 100px")
    
    if(product.status)
        div(class="mb-4" style="color: white")
            span Status: 
                if(product.status == "active")
                    span(class="badge badge-success") Active 
                if(product.status == "inactive")
                    span(class="badge badge-danger") inactive    
    
    if(product.position)
        div(class="mb-4" style="color: white") position: <b>#{product.position}</b>

    if(product.description)
        div(class="mb-4" style="color: white") description: <b>#{product.description}</b>

    a( href=`${prefixAdmin}/product/edit/${product._id}` class="btn btn-warning") Edit
    script(src="/admin/js/script.js")
        