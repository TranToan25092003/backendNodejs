extends ../../layout/default.pug

block main 
    h1(class="mb-4" style="color: white") #{title}

    .card.mb-3 
        .card-header List role 
        .card-body 
            .row 
                .col-8 
                .col-4.text-right 
                a(
                    href=`${prefixAdmin}/roles/create`
                    class="btn btn-outline-success"
                    style="color: black"
                ) Create


    table(
        class="table table-hove table-sm" style="width: 1000px"
    )

        thead 
            tr  
                th STT 
                th Permissions 
                th Descritption 
                th Action 
        
        tbody 
            if(listRole.length > 0)
                each item, index in listRole
                    tr  
                        td #{index + 1}
                        td #{item.title}
                        td #{item.description}
                        td 
                            a(
                                class="btn btn-secondary btn-sm"
                                href=`${prefixAdmin}/roles/detail/${item.id}`
                            ) detail 
                            a(
                                class="btn btn-warning btn-sm ml-1"
                                href=`${prefixAdmin}/roles/edit/${item.id}`
                            ) Edit
                            button(
                                class="btn btn-danger btn-sm ml-1"
                            ) Delete
            else 
                tr
                td(colspan="4" class="text-center") There is no permissions at all