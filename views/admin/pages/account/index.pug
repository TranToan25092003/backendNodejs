extends ../../layout/default.pug

block main 
    h1(class="mb-4" style="color: white;") #{title}

    .card.mb-3 
        .card-header List account
        .card-body 
            .row 
                .col-8 
                .col-4.text-right 
                if(role.Permissions.includes("account_add"))
                    a(
                    href=`${prefixAdmin}/account/create`
                    class="btn btn-outline-success"
                    style="color: black"
                    ) Create
    .card.mb-3  
            if(role.Permissions.includes("account_view"))
                .card-header list product
                    .card-body
                        .row 
                        table(class="table table-striped-columns" check-box-multi)
                            thead 
                            a(
                        href=`${prefixAdmin}/account/create`
                        class="btn btn-outline-success"
                        style="color: black"
                    ) Create
                            
                            
                                tr 
                                    th 
                                        input(type="checkbox" name="checkAll")
                                    th No 
                                    th image 
                                
                                    th email 
                                    th status
                                    th role 
                                    th action 

                            tbody
                                each item, index in listAccount 
                                    tr 
                                        td 
                                            input(type="checkbox" name="id" value="" )
                                        
                                        td #{index+1}

                                        td 
                                            img(src=item.avartar, alt="product", width="300px" height="auto")
                                        td #{item.email}
                                        td #{item.status}
                                        td #{item.role.title}
                                            
                                        
                                            
                                        td
                                            div.btn-group 
                                                a(href=`` class="btn btn-secondary btn-sm") Detail 
                                                if(role.Permissions.includes("account_update"))
                                                    a(href=`${prefixAdmin}/account/edit/${item._id}` class="btn btn-warning btn-sm") update 
                                                if(role.Permissions.includes("account_delete"))
                                                    button(class="btn btn-danger btn-sm ml-1" delete-btn id=``) delete 
